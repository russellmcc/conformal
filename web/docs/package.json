{
  "name": "docs",
  "description": "Documentation site",
  "private": true,
  "homepage": "https://github.com/russellmcc/conformal",
  "bugs": "https://github.com/russellmcc/conformal/issues",
  "license": "ISC",
  "scripts": {
    "lint": "tsc && eslint . --max-warnings 0",
    "check-format": "prettier -c .",
    "format": "prettier --write .",
    "gen-scripts": "bun ../scripts/src/selfDoc.ts > pages/docs/reference/scripts.md",
    "dev": "bun run gen-scripts && bun x --bun next dev",
    "build": "bun run gen-scripts && bun x --bun next build && bun x next-image-export-optimizer"
  },
  "type": "module",
  "dependencies": {
    "next": "catalog:",
    "next-image-export-optimizer": "catalog:",
    "nextra": "catalog:",
    "nextra-theme-docs": "catalog:"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "@next/eslint-plugin-next": "catalog:",
    "@eslint/eslintrc": "catalog:"
  }
}
