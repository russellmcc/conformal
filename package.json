{
  "name": "framework",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "web/*"
  ],
  "scripts": {
    "bootstrap": "scripts bootstrap",
    "ci": "scripts ci",
    "check-lfs": "scripts check-lfs",
    "check-todo": "scripts check-todo",
    "check-format": "scripts check-format",
    "format": "scripts format",
    "web-dev": "scripts web-script -s dev",
    "web-storybook": "scripts web-script -s storybook",
    "web-build-storybook": "scripts web-script -s build-storybook",
    "web-build": "scripts web-script -s build",
    "web-lint": "bun run --filter '*' lint",
    "web-test": "bun test",
    "rust-miri": "PROPTEST_DISABLE_FAILURE_PERSISTENCE=true MIRIFLAGS='-Zmiri-env-forward=PROPTEST_DISABLE_FAILURE_PERSISTENCE' scripts cargo +nightly miri test",
    "rust-build": "scripts cargo build",
    "rust-lint": "scripts cargo clippy",
    "rust-test": "scripts cargo test",
    "rust-bench": "scripts cargo bench",
    "rust-snapshot-update": "UPDATE_SNAPSHOTS=1 bun run rust-test",
    "package": "scripts web-script -s package",
    "validate": "scripts web-script -s validate"
  }
}
